<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/user_task_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="My Tasks"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/all_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:text="All Tasks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/task_3_button"
        app:layout_constraintTop_toTopOf="@+id/setting_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/setting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/all_tasks"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toEndOf="@+id/add_task" />

    <Button
        android:id="@+id/add_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Add Task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/all_tasks"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setting_button"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/task1"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="40dp"
        android:text="Fold the dishes"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_task_list" />

    <Button
        android:id="@+id/task_3_button"
        android:layout_width="84dp"
        android:layout_height="37dp"
        android:layout_marginTop="32dp"
        android:text="view task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toEndOf="@+id/task3"
        app:layout_constraintTop_toBottomOf="@+id/task_2_button" />

    <TextView
        android:id="@+id/task3"
        android:layout_width="167dp"
        android:layout_height="37dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="40dp"
        android:text="Vacuum the roof"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task2" />

    <Button
        android:id="@+id/task_1_button"
        android:layout_width="84dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:text="view task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toEndOf="@+id/task1"
        app:layout_constraintTop_toBottomOf="@+id/user_task_list" />

    <Button
        android:id="@+id/task_2_button"
        android:layout_width="84dp"
        android:layout_height="37dp"
        android:layout_marginTop="32dp"
        android:text="view task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toEndOf="@+id/task2"
        app:layout_constraintTop_toBottomOf="@+id/task_1_button" />

    <TextView
        android:id="@+id/task2"
        android:layout_width="165dp"
        android:layout_height="34dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="36dp"
        android:text="Mow the carpet"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task1" />

</androidx.constraintlayout.widget.ConstraintLayout>